SHOW DATABASES;

USE dswork;

CREATE TABLE Student(
sno CHAR(8),
firstname VARCHAR(12),
lastname VARCHAR(15),
phoneno CHAR(10)
);

CREATE TABLE Unit(
unitindex CHAR(8),
dept CHAR(10),
unitname VARCHAE(40)
);

CREATE TABLE Enrolment(
unit CHAR(8)
student CHAR(8)
year CHAR(4),
mark INT(3), 
grade CHAR(1)
);

SHOW TABLES;

DESCRIBE Student;

DESCRIBE Unit;

DESCRIBE Enrolment;

SHOW COLUMNS FROM Student;


